{
    "compilerOptions": {
      "outDir": "./dist/",
      "module": "commonjs",
      "target": "es5",
      "lib": [
        "es6",
        "dom"
      ],
      "sourceMap": true,
      "allowJs": true,
      "jsx": "react",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }